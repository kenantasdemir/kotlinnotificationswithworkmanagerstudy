<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPWR"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:text="PWR Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOTWR"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonOTWR"
        android:layout_width="204dp"
        android:layout_height="54dp"
        android:text="OTWR Notification"
        app:layout_constraintBottom_toTopOf="@+id/buttonPWR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNormalNotification"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonNormalNotification"
        android:layout_width="204dp"
        android:layout_height="53dp"
        android:text="Normal Notification"
        app:layout_constraintBottom_toTopOf="@+id/buttonOTWR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>